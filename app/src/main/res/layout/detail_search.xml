<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent" android:id="@+id/search_back">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/detail_search_header_field" android:background="@drawable/chat_top_panel">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#ffffffff" android:textSize="20sp" android:text="Детальный поиск" android:id="@+id/detail_search_header" android:paddingLeft="20sp" android:paddingBottom="5sp" android:paddingTop="5sp"></TextView>
        <LinearLayout android:id="@+id/detail_search_divider" android:layout_marginLeft="10sp" android:layout_width="fill_parent" android:background="#ffb3e15b" android:layout_marginBottom="5sp" android:layout_height="1sp" android:orientation="vertical" android:layout_marginRight="10sp"></LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/detail_search_results_field" android:layout_height="fill_parent" android:background="@drawable/profiles_and_ignore_back">
        <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
            <Button android:layout_weight="1" android:id="@+id/detail_search_set_criteries" android:layout_height="wrap_content" android:background="@drawable/button" android:text="Задать критерии" android:layout_width="fill_parent"></Button>
            <Button android:layout_weight="1" android:id="@+id/detail_search_begin_search" android:layout_height="wrap_content" android:background="@drawable/button" android:text="Поиск" android:layout_width="fill_parent"></Button>
        </LinearLayout>
        <ListView android:padding="2sp" android:divider="@null" android:layout_width="fill_parent" android:listSelector="@drawable/item_selected" android:alwaysDrawnWithCache="false" android:dividerHeight="1sp" android:layout_height="fill_parent" android:id="@+id/detail_search_result_list" android:animationCache="false" android:background="#00000000" android:cacheColorHint="#00000000"></ListView>
    </LinearLayout>
</LinearLayout>
