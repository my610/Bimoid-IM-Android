<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/registration_back"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_top_panel"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5sp"
            android:paddingLeft="25sp"
            android:paddingTop="5sp"
            android:text="Регистрация в BIMOID"
            android:textColor="#ffffffff"
            android:textSize="20sp"></TextView>

        <LinearLayout
            android:id="@+id/divider"
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:layout_marginBottom="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:background="#ffb3e15b"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/reg_field"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/smileys_selector_back">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/reg_datafield"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="10sp">

                <TextView
                    android:id="@+id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="5sp"
                    android:text="Имя учетной записи (a-z, 0-9):"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/reg_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></EditText>

                <TextView
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="5sp"
                    android:text="Укажите пароль:"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/reg_pass"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"></EditText>

                <TextView
                    android:id="@+id/l4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="5sp"
                    android:text="Введите пароль еще раз:"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/reg_pass_dbl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"></EditText>

                <TextView
                    android:id="@+id/l5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="5sp"
                    android:text="Ваш e-mail адрес:"
                    android:textColor="#ffffffff"
                    android:textSize="18sp"></TextView>

                <EditText
                    android:id="@+id/reg_email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"></EditText>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="64sp"
                    android:layout_marginRight="64sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/reg_do_register"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/button"
                        android:text="Зарегистрироваться!"></Button>

                    <Button
                        android:id="@+id/reg_cancel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/button"
                        android:text="Отменить регистрацию"></Button>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/reg_success_field"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:padding="15sp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/l6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5sp"
                    android:text="Поздравляем!"
                    android:textColor="#ffffffff"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/l7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:paddingLeft="5sp"
                    android:text="Регистрация прошла успешно. Теперь Вы можете войти в сеть используя свой новый ID."
                    android:textColor="#ffffffff"
                    android:textSize="20sp"></TextView>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="64sp"
                    android:layout_marginRight="64sp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/reg_back"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:background="@drawable/button"
                        android:text="Вернуться назад"></Button>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>

</LinearLayout>
