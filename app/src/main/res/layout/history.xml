<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical" android:id="@+id/history_back">
        <LinearLayout android:layout_height="wrap_content" android:orientation="vertical" android:layout_width="fill_parent" android:id="@+id/header" android:background="@drawable/chat_top_panel">
            <TextView android:id="@+id/l1" android:layout_height="wrap_content" android:textSize="14sp" android:layout_margin="5sp" android:gravity="center_horizontal" android:layout_width="fill_parent" android:textColor="#ffffffff"></TextView>
            <LinearLayout android:id="@+id/divider" android:layout_marginLeft="10sp" android:layout_width="fill_parent" android:background="#ffb3e15b" android:layout_marginTop="4sp" android:layout_height="1sp" android:orientation="vertical" android:layout_marginRight="10sp" android:layout_marginBottom="4sp"></LinearLayout>

            <EditText
                android:id="@+id/history_search_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:drawableRight="@drawable/ic_btn_search">

                <requestFocus />
            </EditText>

        </LinearLayout>
        <FrameLayout android:layout_height="fill_parent" android:layout_width="fill_parent" android:paddingTop="15sp" android:background="@drawable/profiles_and_ignore_back" android:id="@+id/history_list_field">
            <ListView android:divider="#00000000" android:layout_height="fill_parent" android:dividerHeight="1sp" android:layout_width="fill_parent" android:stackFromBottom="true" android:id="@+id/history_message_list" android:transcriptMode="alwaysScroll" android:layout_gravity="center"></ListView>
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/history_status" android:textColor="#ffffffff" android:textSize="20sp" android:text="История сообщений отсутствует" android:gravity="center"></TextView>
        </FrameLayout>
    </LinearLayout>
    
</LinearLayout>
