<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainTheme" parent="@android:style/Theme.Wallpaper.NoTitleBar">
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SettingsTheme" parent="@android:style/Theme.Black.NoTitleBar">
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:preferenceStyle">@style/Preference</item>
        <item name="android:preferenceScreenStyle">@style/Preference.PreferenceScreen</item>
        <item name="android:checkBoxPreferenceStyle">@style/Preference.CheckBoxPreference</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="android:dialogPreferenceStyle">@style/Preference.DialogPreference</item>
        <item name="android:listViewStyle">@style/ListStyle</item>
        <item name="android:editTextStyle">@style/InputStyle</item>
        <item name="android:checkboxStyle">@style/CheckStyle</item>
        <item name="android:cacheColorHint">#ff000000</item>
    </style>
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:colorForeground">#ffffffff</item>
        <item name="android:colorBackground">#aaffffff</item>
        <item name="android:windowBackground">@drawable/blue_glow</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/TopDialogAnimation</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="ListStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/item_selected</item>
        <item name="android:divider">#00000000</item>
        <item name="android:dividerHeight">2sp</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:cacheColorHint">#00000000</item>
        <item name="android:background">@drawable/contactlist_items_back</item>
        <item name="android:padding">6sp</item>
        </style>
    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">#ff000000</item>
    </style>
    <style name="InputStyle" parent="@android:style/Widget.EditText">
    </style>
    <style name="CheckStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:background">@null</item>
        <item name="android:button">@drawable/checkbox</item>
    </style>
    <style name="TopDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/top_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/top_dialog_hide</item>
    </style>
    <style name="CenterDialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/center_dialog_show</item>
        <item name="android:windowExitAnimation">@anim/center_dialog_hide</item>
    </style>
    <style name="Preference">
        <item name="android:layout">@layout/preference_item</item>
    </style>
    <style name="Preference.PreferenceScreen" parent="@style/Preference">
        <item name="android:widgetLayout">@layout/preference_screen</item>
    </style>
    <style name="Preference.CheckBoxPreference" parent="@style/Preference">
        <item name="android:widgetLayout">@layout/preference_checkitem</item>
    </style>
    <style name="Preference.DialogPreference" parent="@style/Preference">
        <item name="android:widgetLayout">@layout/preference_screen</item>
    </style>
        <style name="Preference.Category" parent="@style/Preference">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>
    <style name="PreferenceTheme" parent="@android:style/Theme.NoTitleBar">
    </style>
</resources>
